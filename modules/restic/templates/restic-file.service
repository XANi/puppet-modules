[Unit]
Description=restic file [<%= @title %>]

[Service]
Type=oneshot
#Restart=always
EnvironmentFile=/etc/restic/env
ExecStart=restic backup --tag <%= @backup_tag %> \
     <% if @exclude_set %>--exclude-file /etc/restic/exclude-<%= @exclude_set %> <% end %> \
     <%= @extra_flags %> \
     "<%= @directory %>"


